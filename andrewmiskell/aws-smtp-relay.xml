<?xml version="1.0"?>
<Container version="2">
  <Name>aws-smtp-relay</Name>
  <Repository>blueimp/aws-smtp-relay</Repository>
  <Registry>https://hub.docker.com/r/blueimp/aws-smtp-relay</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support/>
  <Project>https://github.com/blueimp/aws-smtp-relay</Project>
  <Overview/>
  <Category>Tools: Network:Management Status:Stable</Category>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/andrewmiskell/unraid-docker-templates/main/andrewmiskell/aws-smtp-relay.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/andrewmiskell/unraid-docker-templates/main/img/aws-ses-icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1605070902</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Description/>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort/>
        <ContainerPort>25</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/aws-smtp-relay</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value/>
      <Name>AWS_REGION</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>AWS_ACCESS_KEY_ID</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>AWS_SECRET_ACCESS_KEY</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>PASSWORD</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>BCRYPT_HASH</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>TLS_KEY_PASS</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="AWS Region" Target="AWS_REGION" Default="" Mode="" Description="Container Variable: AWS_REGION" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="AWS Access Key" Target="AWS_ACCESS_KEY_ID" Default="" Mode="" Description="Container Variable: AWS_ACCESS_KEY_ID" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="AWS Secret Access Key" Target="AWS_SECRET_ACCESS_KEY" Default="" Mode="" Description="Container Variable: AWS_SECRET_ACCESS_KEY" Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="SMTP Listen Port" Target="1025" Default="1025" Mode="tcp" Description="Container Port: 1025" Type="Port" Display="always" Required="false" Mask="false"/>
  <Config Name="AppData Config Path" Target="/config" Default="/mnt/user/appdata/aws-smtp-relay" Mode="ro" Description="Container Path: /config" Type="Path" Display="advanced" Required="false" Mask="false">/mnt/user/appdata/aws-smtp-relay</Config>
  <Config Name="SMTP Password" Target="PASSWORD" Default="" Mode="" Description="Plaintext SMTP Password (requires CRAM-MD5 on the client)" Type="Variable" Display="advanced" Required="false" Mask="true"/>
  <Config Name="SMTP Password (Hashed)" Target="BCRYPT_HASH" Default="" Mode="" Description="Encrypted SMTP Password (enables LOGIN and PLAIN authentication but requires TLS enabled)" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="TLS Certificate Key Password" Target="TLS_KEY_PASS" Default="" Mode="" Description="TLS Certificate Password (if specified on the private/public certificates)" Type="Variable" Display="advanced" Required="false" Mask="true"/>
</Container>
